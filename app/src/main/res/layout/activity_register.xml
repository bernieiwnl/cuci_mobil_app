<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".REGISTER.RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/android_background_black"
        android:layout_height="match_parent">
    </ImageView>

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:background="@drawable/car_wash_logo"
        android:layout_height="wrap_content">
    </ImageView>



    <TextView
        android:id="@+id/txtLTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Registrasi"
        android:textColor="#ffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLTitle"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="Registrasi untuk administrator" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/namaLengkap"
        android:layout_below="@id/textSubtitle"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Nama Lengkap"
        android:textColorHint="#ffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_baseline_sentiment_dissatisfied_24"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFullName"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:inputType="text"
            android:layout_height="70dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_below="@id/namaLengkap"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Email"
        android:textColorHint="#ffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:textColor="#ffffff"
            android:layout_height="70dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Password"
        android:textColorHint="#ffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_baseline_security_24"
        app:endIconMode="password_toggle"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:layout_height="70dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnRegister"
        android:layout_below="@+id/password"
        android:layout_width="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0d47a1"
        android:enabled="false"
        android:padding="15dp"
        android:text="BUAT AKUN"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun ?"
            android:textColor="#ffffff"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtLoginTo"
            android:layout_toRightOf="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk."
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>