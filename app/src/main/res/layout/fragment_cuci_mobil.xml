<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutFragmentCuciMobil"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".NAVIGATION.CuciMobilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:text="Menu Cuci Mobil"
        style="@style/viewParent.headerText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_DataCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp">

            <net.colindodd.gradientlayout.GradientRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                app:start_color="@color/gradientLightYellow"
                app:end_color="@color/gradientOrange"
                app:orientation="LEFT_RIGHT"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewSub2Title"
                    android:text="Customer"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="Daftar pelanggan cuci mobil \nyang terdaftar "
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/textViewSub2Title"/>

                <ImageView
                    android:maxHeight="90dp"
                    android:src="@drawable/ic_customer_logo"
                    style="@style/homeCardImage" />


            </net.colindodd.gradientlayout.GradientRelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_DataPaket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp">

            <net.colindodd.gradientlayout.GradientRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                app:start_color="@color/gradientLightGreen"
                app:end_color="@color/gradientLightBlue"
                app:orientation="LEFT_RIGHT"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewSub4Title"
                    android:text="Paket Cuci Mobil"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="Daftar paket pencucian mobil \nyang dapat dilakukan "
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/textViewSub4Title"/>

                <ImageView
                    android:maxHeight="90dp"
                    android:src="@drawable/ic_wash_package"
                    style="@style/homeCardImage" />


            </net.colindodd.gradientlayout.GradientRelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_TambahCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp">

            <net.colindodd.gradientlayout.GradientRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                app:start_color="@color/gradientLightYellow"
                app:end_color="@color/gradientViolet"
                app:orientation="LEFT_RIGHT"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewSub5Title"
                    android:text="Tambah Customer"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="Tambahkan data pelanggan \npaling baru disini "
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/textViewSub5Title"/>

                <ImageView
                    android:maxHeight="90dp"
                    android:src="@drawable/ic_new_customer"
                    style="@style/homeCardImage" />


            </net.colindodd.gradientlayout.GradientRelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_TambahDataPaket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp">

            <net.colindodd.gradientlayout.GradientRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                app:start_color="@color/gradientOrange"
                app:end_color="@color/gradientLightGreen"
                app:orientation="LEFT_RIGHT"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textViewSub6Title"
                    android:text="Tambah Paket"
                    style="@style/viewParent.headerText.HomeCardTitle" />

                <TextView
                    android:text="Tambahkan data paket \npencucian mobil disini "
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/textViewSub6Title"/>

                <ImageView
                    android:maxHeight="90dp"
                    android:src="@drawable/ic_new_package"
                    style="@style/homeCardImage" />


            </net.colindodd.gradientlayout.GradientRelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>