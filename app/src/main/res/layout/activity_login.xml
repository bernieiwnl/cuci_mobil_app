<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LOGIN.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/android_background_black"
        android:layout_height="match_parent">
    </ImageView>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:background="@drawable/car_wash_logo"
        android:layout_height="wrap_content">
    </ImageView>

    <TextView
        android:id="@+id/txtLTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="CarWash"
        android:textColor="#ffff"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLTitle"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="Aplikasi Cuci Mobil dan Sepeda Motor" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_below="@id/textSubtitle"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColorHint="#ffffff"
        android:hint="Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:startIconTint="#ffffff"
        app:boxStrokeColor="#ffffff"
        app:endIconTint="#ffffff"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            android:layout_height="70dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:hint="Password"
        android:textColorHint="#ffffff"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        app:startIconDrawable="@drawable/ic_baseline_security_24"
        app:endIconMode="password_toggle"
        app:startIconTint="#ffffff"
        app:endIconTint="#ffffff"
        app:boxStrokeColor="#ffffff">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:layout_height="70dp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#0d47a1"
        android:enabled="false"
        android:padding="15dp"
        android:text="Masuk"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:layout_below="@id/password"/>


</RelativeLayout>